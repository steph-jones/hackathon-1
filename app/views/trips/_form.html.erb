<%= form_with(model: @trip, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Trip Name" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description%>
  </div>
  <%= f.submit "Create Trip", class: "btn light-green accent-3" %>
<% end %>