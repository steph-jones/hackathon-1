<%= render 'layouts/navbar' %>

<h1> <%= @trip.id ? "Edit Trip" : "New Trip" %> </h1>
<hr />  
<%= form_with(model: @trip, local: true) do |f| %>
  <form class="ui form">

  <div class="ui form">
    <div class="field">
      <label><%= f.label :name %> </label>
      <%= f.text_field :name, required: true, autofocus: true %>
    </div>
    <div class="field">
    <label><%= f.label :description %></label>
      <%= f.text_area :description, required: true %>
    </div>
  </div>

  <h3>Range</h3>
  <div class="ui form">
    <div class="two fields">
      <div class="field">
      <label><%= f.label :start_date %></label>
        <div class="ui calendar" id="rangestart">
          <div class="ui input left icon">
            <i class="calendar icon"></i>
            <input type="text" placeholder="Start">
          </div>
        </div>
      </div>
      <div class="field">
      <label><%= f.label :end_date %></label>
        <div class="ui calendar" id="rangeend">
          <div class="ui input left icon">
            <i class="calendar icon"></i>
            <input type="text" placeholder="End">
          </div>
        </div>
      </div>
    </div>
  </div>
  <br/>


  <%= f.submit %>
  <% end %>
